@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>

<div class="body-blur"></div>
<div class="grad"></div>

<br>
<div class="login">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <input asp-for="Username" class="form-control" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        @*<div class="checkbox">
            <label asp-for="RememberMe" style="color:gray">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>*@
        <div class="form-group">
            <br />
            <a asp-action="ForgotPassword" style="color:gray">Forgot your password?</a>
            <br />
            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" style="color:gray">Register as a new user?</a>
        </div>
        <button type="submit" class="login-button" style="width:250px">Log in</button>
    </form>
</div>

<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
