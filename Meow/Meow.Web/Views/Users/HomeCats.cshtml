@{
    ViewData["Title"] = "HomeCats";
}

<div class="container">

    <h1 class="my-4 text-center text-lg-left">Home Cats</h1>

    <div class="row text-center text-lg-left">

        @foreach (var cat in this.Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 hovereffect">
                <a asp-controller="Cats" asp-action="Details" asp-route-id="@cat.Id" class="d-block mb-4 h-100">
                    @{
                        var imgSrc = cat.Image != null ? ImageConvertions.ByteArrayToImage(cat.Image) : WebConstants.DefaultCatPath;
                    }
                    <img class="img-fluid img-thumbnail img-cat img-circle" src="@imgSrc" alt="@cat.Name">
                </a>
            </div>
        }
    </div>
</div>