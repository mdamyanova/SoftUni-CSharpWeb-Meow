@model UserFormModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<div class="body-blur"></div>
<div class="grad"></div>
<br>

<div class="login">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input asp-for="Username" class="form-control" placeholder="Name" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Location" class="form-control" placeholder="Location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Birthdate" class="form-control" placeholder="birthdate" />
            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" style="width: 250px; height: 25px"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Image" type="file" class="form-control" />
        </div>

            <button type="submit" class="login-button" style="width: 250px">Edit</button>
    </form>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}