
@{
    ViewData["Title"] = "Requests";
}

<h2>Requests</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Owner
            </th>
            <th>
                Details
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in this.Model)
        {
            <tr>
                <th>
                    @cat.Name
                </th>
                <th>
                    @cat.Owner
                </th>
                <th>
                    <a class="btn btn-sm btn-default" asp-area="Cats" asp-controller="AdoptionCats" asp-action="Adopt" asp-route-id="@cat.Id">Details</a>
                </th>
                <th>
                    <a class="btn btn-sm btn-default" asp-area="Cats" asp-controller="AdoptionCats" asp-action="Give" asp-route-id="@cat.Id">Give</a>
                </th>
            </tr>
        }
    </tbody>
</table>